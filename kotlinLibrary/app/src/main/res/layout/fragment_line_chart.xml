<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/horizontal_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.55"
            android:orientation="horizontal"/>

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/line_chart"
            android:layout_width="match_parent"
            android:layout_height="0dp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/horizontal_guideline"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/horizontal_guideline"
            app:layout_constraintBottom_toBottomOf="parent"

            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/today_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/summary_button_press"

                    android:text="@string/today"
                    android:textSize="18sp"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textStyle="normal"

                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="15dp"/>

                <Button
                    android:id="@+id/two_days_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"

                    android:layout_weight="1"
                    android:background="@drawable/summary_button_noraml2"
                    android:text="@string/twoDays"
                    android:textAllCaps="false"
                    android:textColor="@color/lightGray"

                    android:textSize="18sp"
                    android:textStyle="normal" />

                <Button
                    android:id="@+id/three_days_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/summary_button_noraml2"

                    android:text="@string/threeDays"
                    android:textSize="18sp"
                    android:textStyle="normal"
                    android:textColor="@color/lightGray"
                    android:textAllCaps="false"

                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="10dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="10dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageButton
                        android:id="@+id/yesterday_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/clear"

                        android:src="@drawable/summary_left_arrow"
                        app:tint="@color/lightGray"

                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"

                        android:layout_marginStart="10dp"/>

                    <ImageButton
                        android:id="@+id/tomorrow_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/clear"

                        android:src="@drawable/summary_right_arrow"
                        app:tint="@color/lightGray"

                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"

                        android:layout_marginEnd="10dp" />

                    <Button
                        android:id="@+id/date_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/clear"

                        android:text="-"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"

                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                    <ImageButton
                        android:id="@+id/calendar_Btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/clear"

                        android:src="@drawable/ic_calendar"
                        app:tint="@color/lightDarkGray"

                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/date_text_view"

                        android:layout_marginEnd="5dp" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2.5"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"

                        android:text="@string/home_minBpm"
                        android:textSize="18sp"
                        android:textColor="@color/lightGray"

                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/min_value"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"

                        android:text="0"
                        android:textSize="16sp"
                        android:textColor="@color/lightGray"

                        android:gravity="center"/>
                    <TextView
                        android:id="@+id/dif_min_value"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"

                        android:text="0"
                        android:textSize="16sp"
                        android:textColor="@color/myBlue"

                        android:gravity="center"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/label"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"

                        android:text="@string/avgBPM"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"

                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/avg_value"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"

                        android:text="0"
                        android:textSize="20sp"
                        android:textStyle="bold"

                        android:textColor="@color/black"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/unit_label"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"

                        android:text="@string/fragment_bpm"
                        android:textSize="20sp"
                        android:textStyle="bold"

                        android:textColor="@color/black"

                        android:gravity="center"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"

                        android:text="@string/home_maxBpm"
                        android:textSize="18sp"
                        android:textColor="@color/lightGray"

                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/max_value"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"

                        android:text="0"
                        android:textSize="16sp"
                        android:textColor="@color/lightGray"

                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/dif_max_value"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"

                        android:text="0"
                        android:textSize="16sp"
                        android:textColor="@color/myRed"

                        android:gravity="center"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:indeterminateTint="@color/myBlue"

            android:visibility="invisible"

            app:layout_constraintTop_toTopOf="@+id/line_chart"
            app:layout_constraintStart_toStartOf="@+id/line_chart"
            app:layout_constraintEnd_toEndOf="@+id/line_chart"
            app:layout_constraintBottom_toBottomOf="@+id/line_chart" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>