<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/auth_phone"
    android:gravity="center"
    android:background="@color/white">

    <include
        layout="@layout/lib_toolbar"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/auth_phone_border"

        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="-10dp">

        <TextView
            android:id="@+id/auth_phone_title"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/auth_phone_title"

            android:text="@string/identityVerification"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:gravity="center"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/auth_phone_body"
            android:layout_width="match_parent"
            android:layout_height="40dp"

            android:text="@string/helpAuthText"
            android:textColor="@color/mySkyBlue"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:gravity="center"

            app:layout_constraintTop_toBottomOf="@+id/auth_phone_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            android:layout_marginTop="50dp" />

        <Button
            android:id="@+id/auth_phone_national_button"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@color/clear"

            android:text="KR"
            android:textColor="@color/darkGray"
            android:textSize="12sp"
            android:textStyle="bold"

            app:layout_constraintTop_toBottomOf="@+id/auth_phone_body"
            app:layout_constraintStart_toStartOf="parent"

            android:layout_marginTop="50dp"
            android:layout_marginStart="10dp" />

        <ImageView
            android:id="@+id/auth_phone_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"

            app:layout_constraintTop_toTopOf="@+id/auth_phone_national_button"
            app:layout_constraintBottom_toBottomOf="@+id/auth_phone_national_button"
            app:layout_constraintStart_toStartOf="@+id/auth_phone_national_button"

            android:layout_marginStart="15dp" />

        <Button
            android:id="@+id/auth_phone_verify_button"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:background="@drawable/auth_phone_button"
            android:layout_gravity="center"

            android:text="@string/certNo"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="normal"

            app:layout_constraintTop_toTopOf="@+id/auth_phone_national_button"
            app:layout_constraintBottom_toBottomOf="@+id/auth_phone_national_button"
            app:layout_constraintEnd_toEndOf="parent"

            android:layout_marginEnd="10dp"/>

        <EditText
            android:id="@+id/auth_phone_edittext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:imeOptions="actionDone"

            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/lightDarkGray"
            android:backgroundTint="@color/clear"
            android:textCursorDrawable="@drawable/edittext_blue_cursor"

            app:layout_constraintTop_toTopOf="@+id/auth_phone_national_button"
            app:layout_constraintStart_toEndOf="@+id/auth_phone_national_button"
            app:layout_constraintEnd_toStartOf="@+id/auth_phone_verify_button"

            android:layout_marginTop="4dp"
            android:layout_marginEnd="10dp"/>

        <View
            android:id="@+id/auth_phone_underline"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:background="@color/mySkyBlue"

            app:layout_constraintTop_toBottomOf="@+id/auth_phone_national_button"
            app:layout_constraintStart_toStartOf="@id/auth_phone_national_button"
            app:layout_constraintEnd_toEndOf="@+id/auth_phone_national_button"

            android:layout_marginTop="-12dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:background="@color/mySkyBlue"

            app:layout_constraintTop_toTopOf="@+id/auth_phone_underline"
            app:layout_constraintStart_toStartOf="@id/auth_phone_edittext"
            app:layout_constraintEnd_toEndOf="@+id/auth_phone_edittext" />


        <TextView
            android:id="@+id/auth_phone_verify_text"
            android:layout_width="wrap_content"
            android:layout_height="0dp"

            android:text="@string/verifyNumber"
            android:textColor="@color/darkGray"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:gravity="center"

            android:visibility="gone"

            app:layout_constraintTop_toBottomOf="@id/auth_phone_national_button"
            app:layout_constraintStart_toStartOf="@id/auth_phone_national_button"
            app:layout_constraintEnd_toEndOf="@+id/auth_phone_national_button"

            android:layout_marginTop="10dp"/>

        <EditText
            android:id="@+id/auth_phone_verify_edittext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:imeOptions="actionDone"

            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/lightDarkGray"
            android:backgroundTint="@color/clear"
            android:textCursorDrawable="@drawable/edittext_blue_cursor"

            android:visibility="gone"

            app:layout_constraintTop_toBottomOf="@+id/auth_phone_national_button"
            app:layout_constraintStart_toEndOf="@+id/auth_phone_national_button"
            app:layout_constraintEnd_toStartOf="@+id/auth_phone_verify_button"

            android:layout_marginTop="-4dp"
            android:layout_marginEnd="10dp"/>

        <View
            android:id="@+id/auth_phone_verify_underline"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:background="@color/mySkyBlue"

            android:visibility="gone"

            app:layout_constraintBottom_toBottomOf="@+id/auth_phone_verify_edittext"
            app:layout_constraintStart_toStartOf="@id/auth_phone_verify_edittext"
            app:layout_constraintEnd_toEndOf="@+id/auth_phone_verify_edittext"

            android:layout_marginBottom="7dp"
            android:layout_marginStart="3dp"/>

        <TextView
            android:id="@+id/auth_phone_help_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="@string/threeMinutesHelpText"
            android:textColor="@color/lightGray"
            android:textSize="12sp"
            android:textStyle="bold"

            app:layout_constraintTop_toBottomOf="@+id/auth_phone_verify_edittext"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp" />

        <TextView
            android:id="@+id/auth_phone_help_text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="@string/resendAuthNumber"
            android:textColor="@color/lightGray"
            android:textSize="12sp"
            android:textStyle="bold"

            app:layout_constraintTop_toBottomOf="@+id/auth_phone_help_text"
            app:layout_constraintStart_toStartOf="@+id/auth_phone_help_text"

            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"/>

        <Button
            android:id="@+id/auth_phone_ok_button"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@drawable/auth_phone_button"
            android:layout_gravity="center"

            android:text="@string/ok"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="normal"

            app:layout_constraintTop_toBottomOf="@+id/auth_phone_help_text2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            android:layout_marginTop="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp" />

        <Button
            android:id="@+id/auth_phone_cancel_button"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@drawable/auth_phone_cancel_button"
            android:layout_gravity="center"

            android:text="@string/cancel"
            android:textColor="@color/lightGray"
            android:textSize="16dp"
            android:textStyle="normal"

            app:layout_constraintTop_toBottomOf="@+id/auth_phone_ok_button"
            app:layout_constraintStart_toStartOf="@+id/auth_phone_ok_button"
            app:layout_constraintEnd_toEndOf="@+id/auth_phone_ok_button"

            android:layout_marginTop="10dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/countriesRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="300dp"

            android:textAlignment="center"
            android:background="@color/white"
            android:elevation="4dp"

            android:visibility="gone"

            app:layout_constraintTop_toBottomOf="@+id/auth_phone_national_button"

            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp" />

        <ProgressBar
            android:id="@+id/auth_phone_progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:indeterminateTint="@color/myBlue"

            android:visibility="gone"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/auth_phone_cancel_button"

            android:layout_marginBottom="50dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>

